<main class="sighup_main">
<p>新しいアカウントを作成</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
　
　<div class="field">
     <p class= mark>必須</p>
    <%= f.text_field :name,placeholder: "ユーザー名",:class => 'sigh_field' %>
  </div>

  <div class="field">
     <p class= mark>必須</p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス",:class => 'sigh_field' %>
  </div>

  <div class="field">
    <p class= mark>必須</p>
    <%= f.password_field :password, autocomplete: "new-password",placeholder: "パスワード",:class => 'sigh_field' %>
  </div>

  <div class="field">
   <p class= mark>必須</p>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "パスワード確認",:class => 'sigh_field' %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成",:class => 'new_account'%>
  </div>
<% end %>
<%= link_to 'すでにアカウントをお持ちの方はログイン', '/users/sign_in',{class: "page_link"} %>
</main>