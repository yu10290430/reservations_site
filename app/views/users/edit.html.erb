<main class="account_view">
  <div class="user_row">
   <div class="row">
      <%= render "shared/user" %>
    <div class="user_field">
       <%= form_with model:@user, url: user_path(@user), local: true  do |f| %>
       <table class="user_table">
        <tr>
          <th class="profile_th">プロフィール</th>
        </tr>
        <tr>
        <td class="user_image_td"><%= image_tag @user.user_image.url, class: 'user_image' %></td>
        </tr>
         
        <tr>
          <th class="profile_th"><%= f.label :user_image ,"アイコン画像" %><p class= mark>必須</p></th>
          <td><%= f.file_field :user_image, id: :user_user_image %></td>
        </tr>

        <tr>
          <th class="profile_th"><%= f.label :name ,"名前" %><p class= mark>必須</p></th>
          <td><%= f.text_field :name, placeholder: "名前を入力" %></td>
        </tr>
 
        <tr>
          <th class="profile_th"><%= f.label :introduction ,"自己紹介" %><p class= mark>必須</p></th>
          <td><%= f.text_field :introduction, placeholder: "自己紹介を入力" %></td>
        </tr>
         <tr>
          <th class="profile_th"><%= f.submit "更新", class: 'btn btn-primary' %></th>
        </tr>
         <% end %>
    </table>
    </div>
   </div>
  </div>
</main>
